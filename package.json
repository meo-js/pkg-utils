{
  "name": "@meojs/pkg-utils",
  "version": "1.0.23",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "description": "Utilities for handling projects and libraries themselves.",
  "author": {
    "name": "SmallMain",
    "email": "smallmain@outlook.com",
    "url": "https://www.smallmain.com/"
  },
  "homepage": "https://www.smallmain.com/",
  "repository": "github:meo-js/pkg-utils",
  "bugs": "https://github.com/meo-js/pkg-utils/issues",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README*.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm exec utc build",
    "prepare": "pnpm exec utc install-git-hook",
    "prepublishOnly": "pnpm run build",
    "publish:patch": "pnpm version patch && pnpm publish",
    "publish:minor": "pnpm version minor && pnpm publish",
    "publish:major": "pnpm version major && pnpm publish"
  },
  "devDependencies": {
    "@meojs/cfgs": "^2.0.58",
    "@meojs/utc": "^1.18.28",
    "@types/node": "^20",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "4.0.0-beta.8"
  },
  "dependencies": {
    "@meojs/std": "^1.0.9",
    "confbox": "^0.2.2",
    "glob": "^11.0.3",
    "package-manager-detector": "^1.3.0",
    "pkg-types": "^2.1.0",
    "type-fest": "^4.41.0"
  }
}
